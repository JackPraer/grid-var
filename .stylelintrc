{
  "extends": "stylelint-config-recommended-scss",
  "rules": {
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "extends",
        "ignores",
        "each",
        "for",
        "custom-media"
      ],
    }],
    "indentation": 2,
    "number-leading-zero": null,
    "unit-whitelist": ["em", "rem", "s", "%"]
  }
}